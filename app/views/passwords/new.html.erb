<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
      <div class="card shadow-lg">
        <div class="card-header text-center py-4">
          <h1 class="h3 mb-1">Forgot Password?</h1>
          <p class="text-muted mb-0">We'll send you reset instructions</p>
        </div>
        <div class="card-body p-4">
          <%= form_with url: passwords_path, class: "needs-validation" do |form| %>
            <div class="mb-4">
              <%= form.label :email_address, "Email", class: "form-label" %>
              <%= form.email_field :email_address, class: "form-control form-control-lg", placeholder: "you@example.com", required: true, autofocus: true, autocomplete: "username", value: params[:email_address] %>
            </div>

            <div class="d-grid gap-2">
              <%= form.submit "Send Reset Instructions", class: "btn btn-primary btn-lg" %>
            </div>
          <% end %>
        </div>
        <div class="card-footer text-center py-3">
          <%= link_to "â† Back to sign in", new_session_path, class: "text-muted" %>
        </div>
      </div>
    </div>
  </div>
</div>
