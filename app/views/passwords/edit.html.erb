<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
      <div class="card shadow-lg">
        <div class="card-header text-center py-4">
          <h1 class="h3 mb-1">Reset Password</h1>
          <p class="text-muted mb-0">Enter your new password</p>
        </div>
        <div class="card-body p-4">
          <%= form_with url: password_path(params[:token]), method: :put, class: "needs-validation" do |form| %>
            <div class="mb-3">
              <%= form.label :password, "New Password", class: "form-label" %>
              <%= form.password_field :password, class: "form-control form-control-lg", placeholder: "••••••••", required: true, autocomplete: "new-password", maxlength: 72 %>
              <div class="form-text">Minimum 8 characters</div>
            </div>

            <div class="mb-4">
              <%= form.label :password_confirmation, "Confirm Password", class: "form-label" %>
              <%= form.password_field :password_confirmation, class: "form-control form-control-lg", placeholder: "••••••••", required: true, autocomplete: "new-password", maxlength: 72 %>
            </div>

            <div class="d-grid gap-2">
              <%= form.submit "Update Password", class: "btn btn-primary btn-lg" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
