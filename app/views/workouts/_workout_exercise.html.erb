<% is_volume_pr = workout_exercise.volume_pr? %>
<div class="workout-exercise <%= 'volume-pr' if is_volume_pr %>" id="<%= dom_id(workout_exercise) %>">
  <div class="card-header d-flex justify-content-between align-items-center">
    <div class="min-w-0" style="min-width: 0;">
      <% if superset_label %>
        <span class="badge bg-secondary me-1"><%= superset_label %></span>
      <% end %>
      <% if is_volume_pr %>
        <span class="badge bg-warning me-1"><i class="bi bi-trophy-fill"></i> Vol PR</span>
      <% end %>
      <%= link_to history_exercise_path(workout_exercise.exercise, machine_id: workout_exercise.machine_id), class: "text-decoration-none", data: { turbo_frame: "_top" } do %>
        <strong><%= workout_exercise.exercise.name %></strong>
        <% if workout_exercise.machine %>
          <small class="text-muted ms-1"><%= workout_exercise.machine.name %></small>
        <% end %>
        <i class="bi bi-graph-up-arrow ms-1 text-muted small"></i>
      <% end %>
      <% if workout_exercise.has_variations? %>
        <span class="badge bg-iron-light ms-1 small" title="<%= workout_exercise.variation_summary %>">
          <i class="bi bi-sliders2-vertical me-1"></i><%= workout_exercise.variation_summary %>
        </span>
      <% end %>
      <% if workout_exercise.machine&.photos&.attached? %>
        <span data-controller="photo-preview"
              data-action="click->photo-preview#show:stop"
              data-photo-preview-urls-value='<%= workout_exercise.machine.photos.map { |photo| url_for(photo.variant(resize_to_limit: [800, 800])) }.to_json %>'
              class="d-inline-block ms-1"
              style="cursor: pointer; vertical-align: middle;"
              title="<%= workout_exercise.machine.name %>">
          <%= image_tag workout_exercise.machine.photos.first.variant(resize_to_limit: [32, 32]),
              class: "rounded",
              style: "width: 20px; height: 20px; object-fit: cover;",
              alt: workout_exercise.machine.name %>
        </span>
      <% end %>
    </div>
    <div class="d-flex align-items-center gap-1 flex-shrink-0">
      <% if workout.in_progress? %>
        <div class="dropdown">
          <button class="btn btn-sm btn-link text-muted p-1" type="button" data-bs-toggle="dropdown" title="Variations">
            <i class="bi bi-sliders2-vertical"></i>
          </button>
          <div class="dropdown-menu dropdown-menu-end p-3" style="min-width: 280px;">
            <h6 class="dropdown-header px-0">Exercise Variations</h6>
            <%= form_with model: workout_exercise,
                url: workout_workout_exercise_path(workout, workout_exercise),
                method: :patch do |vform| %>
              <div class="mb-2">
                <label class="form-label small text-muted mb-0">Grip</label>
                <%= vform.select :grip_width,
                    options_for_select([['—', '']] + WorkoutExercise::GRIP_WIDTHS.map { |g| [g.titleize, g] }, workout_exercise.grip_width),
                    {}, class: "form-select form-select-sm" %>
              </div>
              <div class="mb-2">
                <label class="form-label small text-muted mb-0">Stance</label>
                <%= vform.select :stance,
                    options_for_select([['—', '']] + WorkoutExercise::STANCES.map { |s| [s.titleize, s] }, workout_exercise.stance),
                    {}, class: "form-select form-select-sm" %>
              </div>
              <div class="mb-2">
                <label class="form-label small text-muted mb-0">Angle (°)</label>
                <%= vform.number_field :incline_angle,
                    class: "form-control form-control-sm text-center",
                    placeholder: "—", min: -90, max: 90, inputmode: "numeric" %>
              </div>
              <div class="mb-2">
                <label class="form-label small text-muted mb-0">Bar Type</label>
                <%= vform.select :bar_type,
                    options_for_select([['—', '']] + WorkoutExercise::BAR_TYPES.map { |b| [WorkoutExercise.new(bar_type: b).bar_type_label, b] }, workout_exercise.bar_type),
                    {}, class: "form-select form-select-sm" %>
              </div>
              <div class="text-end">
                <%= vform.submit "Save", class: "btn btn-primary btn-sm" %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
      <div class="dropdown">
        <button class="btn btn-sm btn-link text-muted p-1" type="button" data-bs-toggle="dropdown">
          <i class="bi bi-three-dots-vertical"></i>
        </button>
      <ul class="dropdown-menu dropdown-menu-end">
        <% if workout.in_progress? %>
          <li>
            <%= link_to swap_exercise_workout_workout_exercise_path(workout, workout_exercise),
                class: "dropdown-item text-warning",
                data: { turbo_frame: "modal" } do %>
              <i class="bi bi-arrow-left-right me-2"></i>Swap Exercise
            <% end %>
          </li>
        <% end %>
        <li>
          <%= button_to workout_workout_exercise_path(workout, workout_exercise),
              method: :delete,
              class: "dropdown-item text-danger",
              data: { turbo_confirm: "Remove this exercise? All sets will be deleted." },
              form: { data: { turbo_frame: "_top" } } do %>
            <i class="bi bi-trash me-2"></i>Remove Exercise
          <% end %>
        </li>
      </ul>
    </div>
    </div>
  </div>

  <div class="card-body py-2">
    <% input_unit = input_weight_unit_for(workout_exercise) %>
    <% if workout_exercise.machine&.setup_memory? %>
      <div class="small text-muted mb-2">
        <i class="bi bi-sliders2-vertical me-1"></i>
        <%= workout_exercise.machine.setup_memory_summary %>
      </div>
    <% end %>

    <!-- Previous Performance (if any) -->
    <% if workout_exercise.previous_exercise %>
      <div class="previous-performance text-muted small mb-2">
        <i class="bi bi-arrow-counterclockwise me-1"></i>Last:
        <% workout_exercise.previous_exercise.exercise_sets.each do |prev_set| %>
          <span class="badge bg-dark">
            <%= Current.user.format_weight(prev_set.weight_kg) %><%= Current.user.preferred_unit %> × <%= prev_set.reps %>
          </span>
        <% end %>
      </div>
    <% end %>

    <!-- Sets Table -->
    <div class="sets-list" id="sets_<%= workout_exercise.id %>">
      <div class="row small text-muted mb-1">
        <div class="col-1 text-center">#</div>
        <div class="col-3 text-center">Weight</div>
        <div class="col-3 text-center">
          <%= case workout_exercise.exercise.exercise_type
              when 'reps' then 'Reps'
              when 'time' then 'Time'
              when 'distance' then 'Distance'
              end %>
        </div>
        <div class="col-3 text-center">RPE/RIR</div>
        <div class="col-2"></div>
      </div>

      <%= turbo_frame_tag "sets_list_#{workout_exercise.id}" do %>
        <% workout_exercise.exercise_sets.order(:created_at).each_with_index do |set, idx| %>
          <%= render "exercise_sets/exercise_set", set: set, index: idx + 1, workout: workout, workout_exercise: workout_exercise %>
        <% end %>
      <% end %>
    </div>

    <!-- Warmup Generator -->
    <% if workout.in_progress? && workout_exercise.exercise.has_weight? && workout_exercise.exercise_sets.empty? %>
      <details id="warmup_generator_<%= workout_exercise.id %>" class="warmup-generator-section mb-2">
        <summary class="btn btn-sm btn-outline-warning w-100 text-start">
          <i class="bi bi-fire me-1"></i>Generate Warmups
        </summary>
        <div class="p-3 mt-2 bg-dark rounded border border-secondary border-opacity-25">
          <%= form_with url: generate_warmups_workout_workout_exercise_path(workout, workout_exercise),
              method: :post,
              class: "warmup-generator-form",
              data: { turbo_frame: "_top" } do |form| %>
            <div class="d-flex align-items-end gap-2">
              <div class="flex-grow-1">
                <label class="form-label small text-muted mb-1">Working Weight (<%= input_unit %>)</label>
                <%= form.number_field :working_weight,
                    class: "form-control form-control-sm",
                    placeholder: input_unit,
                    step: "any",
                    inputmode: "decimal",
                    required: true %>
              </div>
              <div>
                <%= form.submit "Add Warmups", class: "btn btn-sm btn-outline-warning" %>
              </div>
            </div>
            <div class="mt-2">
              <small class="text-muted">Generates: bar → 50% → 70% → 85%</small>
            </div>
          <% end %>
        </div>
      </details>
    <% end %>

    <!-- Add Set Button + Form -->
    <% if workout.in_progress? %>
      <div data-controller="add-set-toggle">
        <button type="button"
                class="btn btn-outline-danger btn-sm w-100 mt-2"
                data-add-set-toggle-target="button"
                data-action="add-set-toggle#show">
          <i class="bi bi-plus-lg me-1"></i> Add Set
        </button>
        <div data-add-set-toggle-target="form" class="d-none">

          <%# Form Cues from exercise %>
          <% if workout_exercise.exercise.has_cues? %>
            <div class="form-cues small mt-2 mb-2 px-2 py-1 rounded" style="background: rgba(255, 107, 53, 0.08); border-left: 3px solid var(--bs-warning);">
              <i class="bi bi-lightbulb text-warning me-1"></i>
              <% workout_exercise.exercise.cues_list.each_with_index do |cue, i| %>
                <span class="text-muted"><%= cue %></span><%= '  ·  ' unless i == workout_exercise.exercise.cues_list.length - 1 %>
              <% end %>
            </div>
          <% end %>

          <%= turbo_frame_tag "new_set_#{workout_exercise.id}" do %>
            <%= render "exercise_sets/form",
                workout: workout,
                workout_exercise: workout_exercise,
                set: workout_exercise.exercise_sets.build,
                quick_log_mode: (params[:quick_log] == "1") %>
          <% end %>
        </div>
      </div>
    <% end %>

    <!-- Notes Section (editable) -->
    <%= render "workout_exercises/notes_display", workout: workout, workout_exercise: workout_exercise %>
  </div>
</div>
