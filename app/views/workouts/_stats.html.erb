<%= turbo_frame_tag "workout_stats" do %>
  <div class="row g-3 mb-4">
    <div class="col-4">
      <div class="card text-center">
        <div class="card-body py-3">
          <div class="h4 mb-0"><%= workout.workout_exercises.count %></div>
          <small class="text-muted">Exercises</small>
        </div>
      </div>
    </div>
    <div class="col-4">
      <div class="card text-center">
        <div class="card-body py-3">
          <div class="h4 mb-0"><%= workout.exercise_sets.where(is_warmup: false).count %></div>
          <small class="text-muted">Work Sets</small>
        </div>
      </div>
    </div>
    <div class="col-4">
      <div class="card text-center">
        <div class="card-body py-3">
          <div class="weight-display h4 mb-0">
            <%= number_with_delimiter(Current.user.display_weight(workout.total_volume_kg).round) %>
          </div>
          <small class="text-muted">Volume (<%= Current.user.preferred_unit %>)</small>
        </div>
      </div>
    </div>
  </div>
<% end %>
