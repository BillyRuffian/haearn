                        height: <%= week[:count] == 0 ? '4px' : "#{(week[:count].to_f / max_count * 100).round}%" %>;
                        background: <%= week[:count] == 0 ? 'rgba(255,255,255,0.05)' : week[:count] >= 4 ? '#3d7ea6' : week[:count] >= 3 ? '#ff6b35' : week[:count] >= 2 ? '#b8860b' : '#71797E' %>;
