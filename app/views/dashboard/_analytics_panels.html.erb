        .transform_values do |prs|
          {
            exercise: prs.first[:exercise],
            date: prs.first[:date],
            weight: prs.find { |p| p[:type] == 'weight' }&.dig(:weight),
            weight_reps: prs.find { |p| p[:type] == 'weight' }&.dig(:reps),
