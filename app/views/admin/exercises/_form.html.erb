<%= form_with(model: exercise, url: url, method: method) do |f| %>
  <% if exercise.errors.any? %>
    <div class="alert alert-danger">
      <% exercise.errors.full_messages.each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :name, class: "form-label" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :exercise_type, "Type", class: "form-label" %>
    <%= f.select :exercise_type, Exercise::EXERCISE_TYPES.map { |t| [t.capitalize, t] }, {}, class: "form-select" %>
  </div>

  <div class="mb-3">
    <%= f.label :primary_muscle_group, "Muscle Group", class: "form-label" %>
    <%= f.select :primary_muscle_group, Exercise::MUSCLE_GROUP_LABELS.map { |k, v| [v, k] }, { include_blank: "-- Select --" }, class: "form-select" %>
  </div>

  <div class="mb-3 form-check">
    <%= f.check_box :has_weight, class: "form-check-input" %>
    <%= f.label :has_weight, "Uses external weight", class: "form-check-label" %>
  </div>

  <div class="mb-3">
    <%= f.label :description, class: "form-label" %>
    <%= f.text_area :description, class: "form-control", rows: 3 %>
  </div>

  <div class="d-flex gap-2">
    <%= f.submit class: "btn btn-primary" %>
    <%= link_to "Cancel", admin_exercises_path, class: "btn btn-secondary" %>
  </div>
<% end %>
