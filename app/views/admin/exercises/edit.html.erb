<% content_for(:title, "Edit #{@exercise.name} - Haearn Admin") %>

<div class="mb-3">
  <%= link_to admin_exercise_path(@exercise), class: "text-muted text-decoration-none" do %>
    <i class="bi bi-arrow-left me-1"></i>Back to <%= @exercise.name %>
  <% end %>
</div>

<h1 class="display-heading mb-4">
  <i class="bi bi-pencil me-2 text-rust"></i>Edit Exercise
</h1>

<div class="row">
  <div class="col-lg-6">
    <div class="card">
      <div class="card-body">
        <%= render "form", exercise: @exercise, url: admin_exercise_path(@exercise), method: :patch %>
      </div>
    </div>
  </div>
</div>
