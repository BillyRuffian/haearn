<% content_for(:title, "Exercises - Haearn Admin") %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="display-heading mb-0">
    <i class="bi bi-list-check me-2 text-rust"></i>Exercises
    <span class="badge bg-secondary fs-6 ms-2"><%= @total_count %></span>
  </h1>
  <div class="d-flex gap-2">
    <%= link_to review_admin_exercises_path, class: "btn btn-outline-primary" do %>
      <i class="bi bi-stars me-1"></i>Review
    <% end %>
    <%= link_to new_admin_exercise_path, class: "btn btn-primary" do %>
      <i class="bi bi-plus me-1"></i>New Global Exercise
    <% end %>
  </div>
</div>

<!-- Filters -->
<div class="card mb-4">
  <div class="card-body">
    <%= form_tag admin_exercises_path, method: :get, class: "row g-2 align-items-end" do %>
      <div class="col-md-6">
        <label class="form-label">Search</label>
        <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Exercise name..." %>
      </div>
      <div class="col-md-4">
        <label class="form-label">Source</label>
        <%= select_tag :scope_filter, options_for_select([['All', ''], ['Global', 'global'], ['User Created', 'user_created']], params[:scope_filter]), class: "form-select" %>
      </div>
      <div class="col-md-2">
        <%= submit_tag "Filter", class: "btn btn-primary w-100" %>
      </div>
    <% end %>
  </div>
</div>

<!-- Exercises Table -->
<div class="card">
  <div class="card-body p-0">
    <div class="table-responsive">
      <table class="table table-hover mb-0">
        <thead>
          <tr>
            <th class="table-header-sm">Exercise</th>
            <th class="table-header-sm">Type</th>
            <th class="table-header-sm">Muscle Group</th>
            <th class="table-header-sm text-center">Weight</th>
            <th class="table-header-sm">Source</th>
            <th class="table-header-sm text-end">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @exercises.each do |exercise| %>
            <tr>
              <td>
                <%= link_to exercise.name, admin_exercise_path(exercise), class: "text-decoration-none fw-semibold" %>
              </td>
              <td>
                <span class="badge bg-secondary"><%= exercise.exercise_type %></span>
              </td>
              <td>
                <% if exercise.primary_muscle_group.present? %>
                  <span class="badge badge-sm" style="background: <%= Exercise::MUSCLE_GROUP_COLORS[exercise.primary_muscle_group] %>">
                    <%= Exercise::MUSCLE_GROUP_LABELS[exercise.primary_muscle_group] %>
                  </span>
                <% end %>
              </td>
              <td class="text-center">
                <% if exercise.has_weight %>
                  <i class="bi bi-check-circle text-success"></i>
                <% else %>
                  <i class="bi bi-dash text-muted"></i>
                <% end %>
              </td>
              <td>
                <% if exercise.global? %>
                  <span class="badge bg-rust">Global</span>
                <% else %>
                  <span class="badge bg-secondary">User</span>
                <% end %>
              </td>
              <td class="text-end">
                <%= link_to admin_exercise_path(exercise), class: "btn btn-sm btn-outline-primary" do %>
                  <i class="bi bi-eye"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<!-- Pagination -->
<% if @total_pages > 1 %>
  <nav class="mt-3">
    <ul class="pagination justify-content-center">
      <li class="page-item <%= 'disabled' if @page <= 1 %>">
        <%= link_to "Prev", admin_exercises_path(page: @page - 1, search: params[:search], scope_filter: params[:scope_filter]), class: "page-link" %>
      </li>
      <% (1..@total_pages).each do |p| %>
        <li class="page-item <%= 'active' if p == @page %>">
          <%= link_to p, admin_exercises_path(page: p, search: params[:search], scope_filter: params[:scope_filter]), class: "page-link" %>
        </li>
      <% end %>
      <li class="page-item <%= 'disabled' if @page >= @total_pages %>">
        <%= link_to "Next", admin_exercises_path(page: @page + 1, search: params[:search], scope_filter: params[:scope_filter]), class: "page-link" %>
      </li>
    </ul>
  </nav>
<% end %>
