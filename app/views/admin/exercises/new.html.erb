<% content_for(:title, "New Global Exercise - Haearn Admin") %>

<div class="mb-3">
  <%= link_to admin_exercises_path, class: "text-muted text-decoration-none" do %>
    <i class="bi bi-arrow-left me-1"></i>Back to Exercises
  <% end %>
</div>

<h1 class="display-heading mb-4">
  <i class="bi bi-plus-circle me-2 text-rust"></i>New Global Exercise
</h1>

<div class="row">
  <div class="col-lg-6">
    <div class="card">
      <div class="card-body">
        <%= render "form", exercise: @exercise, url: admin_exercises_path, method: :post %>
      </div>
    </div>
  </div>
</div>
