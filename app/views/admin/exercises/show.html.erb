<% content_for(:title, "#{@exercise.name} - Haearn Admin") %>

<div class="mb-3">
  <%= link_to admin_exercises_path, class: "text-muted text-decoration-none" do %>
    <i class="bi bi-arrow-left me-1"></i>Back to Exercises
  <% end %>
</div>

<div class="row g-4">
  <div class="col-lg-8">
    <div class="card">
      <div class="card-header d-flex justify-content-between align-items-center">
        <span><i class="bi bi-info-circle me-2"></i>Exercise Details</span>
        <% if @exercise.global? %>
          <span class="badge bg-rust">Global</span>
        <% else %>
          <span class="badge bg-secondary">User Created</span>
        <% end %>
      </div>
      <div class="card-body">
        <div class="row g-3">
          <div class="col-sm-6">
            <div class="stat-label">Name</div>
            <div class="fs-5 fw-semibold"><%= @exercise.name %></div>
          </div>
          <div class="col-sm-6">
            <div class="stat-label">Type</div>
            <div><span class="badge bg-secondary"><%= @exercise.exercise_type %></span></div>
          </div>
          <div class="col-sm-6">
            <div class="stat-label">Muscle Group</div>
            <div>
              <% if @exercise.primary_muscle_group.present? %>
                <span class="badge" style="background: <%= Exercise::MUSCLE_GROUP_COLORS[@exercise.primary_muscle_group] %>">
                  <%= Exercise::MUSCLE_GROUP_LABELS[@exercise.primary_muscle_group] %>
                </span>
              <% else %>
                <span class="text-muted">Not set</span>
              <% end %>
            </div>
          </div>
          <div class="col-sm-6">
            <div class="stat-label">Has Weight</div>
            <div><%= @exercise.has_weight ? 'Yes' : 'No' %></div>
          </div>
          <% if @exercise.description.present? %>
            <div class="col-12">
              <div class="stat-label">Description</div>
              <div><%= @exercise.description %></div>
            </div>
          <% end %>
          <% unless @exercise.global? %>
            <div class="col-sm-6">
              <div class="stat-label">Created By</div>
              <div>
                <% if @exercise.user %>
                  <%= link_to @exercise.user.name, admin_user_path(@exercise.user), class: "text-decoration-none" %>
                <% else %>
                  <span class="text-muted">Unknown</span>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Usage Stats -->
    <div class="card mt-3">
      <div class="card-header">
        <i class="bi bi-bar-chart me-2"></i>Usage Stats
      </div>
      <div class="card-body">
        <div class="row g-3 text-center">
          <div class="col-6">
            <div class="stat-label">Times Used</div>
            <div class="display-6 text-rust"><%= @usage_count %></div>
          </div>
          <div class="col-6">
            <div class="stat-label">Unique Users</div>
            <div class="display-6"><%= @user_count %></div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Actions -->
  <div class="col-lg-4">
    <div class="card">
      <div class="card-header">
        <i class="bi bi-lightning me-2"></i>Actions
      </div>
      <div class="card-body d-grid gap-2">
        <%= link_to edit_admin_exercise_path(@exercise), class: "btn btn-outline-primary" do %>
          <i class="bi bi-pencil me-1"></i>Edit Exercise
        <% end %>

        <% unless @exercise.global? %>
          <%= button_to promote_admin_exercise_path(@exercise), method: :post, class: "btn btn-outline-warning", data: { turbo_confirm: "Promote '#{@exercise.name}' to a global exercise?" } do %>
            <i class="bi bi-arrow-up-circle me-1"></i>Promote to Global
          <% end %>
        <% end %>

        <%= button_to admin_exercise_path(@exercise), method: :delete, class: "btn btn-outline-danger", data: { turbo_confirm: "Delete '#{@exercise.name}'? This cannot be undone." } do %>
          <i class="bi bi-trash me-1"></i>Delete Exercise
        <% end %>
      </div>
    </div>
  </div>
</div>
