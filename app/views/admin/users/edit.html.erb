<% content_for(:title, "Edit #{@user.name} - Haearn Admin") %>

<div class="mb-3">
  <%= link_to admin_user_path(@user), class: "text-muted text-decoration-none" do %>
    <i class="bi bi-arrow-left me-1"></i>Back to <%= @user.name %>
  <% end %>
</div>

<h1 class="display-heading mb-4">
  <i class="bi bi-pencil me-2 text-rust"></i>Edit User
</h1>

<div class="row">
  <div class="col-lg-6">
    <div class="card">
      <div class="card-body">
        <%= form_with(model: @user, url: admin_user_path(@user), method: :patch) do |f| %>
          <% if @user.errors.any? %>
            <div class="alert alert-danger">
              <% @user.errors.full_messages.each do |message| %>
                <div><%= message %></div>
              <% end %>
            </div>
          <% end %>

          <div class="mb-3">
            <%= f.label :name, class: "form-label" %>
            <%= f.text_field :name, class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= f.label :email_address, "Email", class: "form-label" %>
            <%= f.email_field :email_address, class: "form-control" %>
          </div>

          <div class="d-flex gap-2">
            <%= f.submit "Update User", class: "btn btn-primary" %>
            <%= link_to "Cancel", admin_user_path(@user), class: "btn btn-secondary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
