<%= turbo_frame_tag gym do %>
  <div class="card mb-3">
    <div class="card-body">
      <div class="d-flex justify-content-between align-items-start">
        <div class="flex-grow-1">
          <h5 class="card-title mb-1">
            <%= link_to gym.name, gym_path(gym), class: "text-decoration-none stretched-link", data: { turbo_frame: "_top" } %>
          </h5>
          <% if gym.location.present? %>
            <p class="text-muted small mb-1">
              <i class="bi bi-geo-alt me-1"></i><%= gym.location %>
            </p>
          <% end %>
          <% if gym.notes.present? %>
            <p class="text-muted small mb-0"><%= truncate(gym.notes, length: 100) %></p>
          <% end %>
        </div>
        <div class="d-flex gap-2 position-relative" style="z-index: 2;">
          <span class="badge bg-secondary">
            <%= pluralize(gym.machines.count, "machine") %>
          </span>
          <%= link_to edit_gym_path(gym), class: "btn btn-sm btn-outline-secondary", data: { turbo_frame: dom_id(gym) } do %>
            <i class="bi bi-pencil"></i>
          <% end %>
          <%= button_to gym_path(gym), method: :delete, class: "btn btn-sm btn-outline-danger", data: { turbo_confirm: "Delete #{gym.name}?" } do %>
            <i class="bi bi-trash"></i>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
