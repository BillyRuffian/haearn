<% content_for(:title) { "#{@gym.name} | Haearn" } %>

<div class="container py-4">
  <nav aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><%= link_to "Gyms", gyms_path %></li>
      <li class="breadcrumb-item active"><%= @gym.name %></li>
    </ol>
  </nav>

  <!-- Gym Header -->
  <%= turbo_frame_tag "gym-header" do %>
    <%= render partial: "gyms/header", locals: { gym: @gym } %>
  <% end %>

  <!-- Machines Section -->
  <div class="card mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
      <span><i class="bi bi-gear me-2"></i>Equipment</span>
      <span class="badge bg-secondary"><%= @machines.count %></span>
    </div>
    
    <!-- New Machine Form - At Top -->
    <div class="card-body border-bottom">
      <%= turbo_frame_tag "new_machine_form" do %>
        <%= render "machines/form", machine: @gym.machines.build, gym: @gym %>
      <% end %>
    </div>
    
    <!-- Machines List -->
    <div id="machines" class="card-body pt-0">
      <% if @machines.any? %>
        <% @machines.each do |machine| %>
          <%= render "machines/machine", machine: machine, gym: @gym %>
        <% end %>
      <% else %>
        <div class="text-center py-4">
          <i class="bi bi-gear display-4 text-muted"></i>
          <p class="text-muted mt-3 mb-0">No equipment yet. Add your first piece of equipment above!</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
