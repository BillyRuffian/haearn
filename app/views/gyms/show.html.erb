<% content_for(:title) { "#{@gym.name} | Haearn" } %>

<div class="container py-4">
  <nav aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><%= link_to "Gyms", gyms_path %></li>
      <li class="breadcrumb-item active"><%= @gym.name %></li>
    </ol>
  </nav>

  <!-- Gym Header -->
  <div class="d-flex justify-content-between align-items-start mb-4">
    <div>
      <h1 class="display-heading mb-1"><%= @gym.name %></h1>
      <% if @gym.location.present? %>
        <p class="text-muted mb-0">
          <i class="bi bi-geo-alt me-1"></i><%= @gym.location %>
        </p>
      <% end %>
      <% if @gym.notes.present? %>
        <p class="text-muted mt-2"><%= @gym.notes %></p>
      <% end %>
    </div>
    <div class="d-flex gap-2">
      <%= link_to edit_gym_path(@gym), class: "btn btn-outline-secondary" do %>
        <i class="bi bi-pencil me-1"></i>Edit Gym
      <% end %>
    </div>
  </div>

  <!-- Machines Section -->
  <div class="card mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
      <span><i class="bi bi-gear me-2"></i>Equipment & Machines</span>
      <span class="badge bg-secondary"><%= @machines.count %></span>
    </div>
    
    <!-- New Machine Form - At Top -->
    <div class="card-body border-bottom">
      <%= turbo_frame_tag "new_machine_form" do %>
        <%= render "machines/form", machine: @gym.machines.build, gym: @gym %>
      <% end %>
    </div>
    
    <!-- Machines List -->
    <div id="machines" class="card-body pt-0">
      <% if @machines.any? %>
        <% @machines.each do |machine| %>
          <%= render "machines/machine", machine: machine, gym: @gym %>
        <% end %>
      <% else %>
        <div class="text-center py-4">
          <i class="bi bi-gear display-4 text-muted"></i>
          <p class="text-muted mt-3 mb-0">No equipment yet. Add your first machine above!</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
