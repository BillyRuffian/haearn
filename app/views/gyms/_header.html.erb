<div id="gym-header" class="d-flex justify-content-between align-items-start mb-4">
  <div>
    <h1 class="display-heading mb-1">
      <%= @gym.name %>
      <% if Current.user.default_gym_id == @gym.id %>
        <span class="badge bg-warning text-dark fs-6 align-middle">
          <i class="bi bi-star-fill me-1"></i>Default
        </span>
      <% end %>
    </h1>
    <% if @gym.location.present? %>
      <p class="text-muted mb-0">
        <i class="bi bi-geo-alt me-1"></i><%= @gym.location %>
      </p>
    <% end %>
    <% if @gym.notes.present? %>
      <p class="text-muted mt-2"><%= @gym.notes %></p>
    <% end %>
  </div>
  <div class="d-flex gap-2">
    <% unless Current.user.default_gym_id == @gym.id %>
      <%= button_to set_default_gym_path(@gym), method: :post, class: "btn btn-outline-warning", data: { turbo_confirm: "Set #{@gym.name} as your default gym?" } do %>
        <i class="bi bi-star me-1"></i>Set as Default
      <% end %>
    <% end %>
    <%= link_to edit_gym_path(@gym), class: "btn btn-outline-secondary" do %>
      <i class="bi bi-pencil me-1"></i>Edit Gym
    <% end %>
  </div>
</div>
