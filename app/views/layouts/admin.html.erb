<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
  <head>
    <title><%= content_for(:title) || "Haearn Admin" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="theme-color" content="#121212">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <% if session[:admin_session_id] %>
      <div class="admin-impersonation-banner text-center py-2 small fw-semibold">
        <i class="bi bi-exclamation-triangle me-1"></i>
        Impersonating <strong><%= Current.user.name %></strong> (<%= Current.user.email_address %>)
        &mdash;
        <%= button_to "Stop Impersonating", admin_stop_impersonating_path, method: :delete, class: "btn btn-sm btn-outline-light ms-2" %>
      </div>
    <% end %>

    <!-- Admin Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark admin-navbar sticky-top">
      <div class="container-fluid">
        <%= link_to admin_root_path, class: "navbar-brand d-flex align-items-center" do %>
          <i class="bi bi-shield-lock me-2"></i>
          HAEARN ADMIN
        <% end %>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#adminNav">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="adminNav">
          <ul class="navbar-nav me-auto">
            <li class="nav-item">
              <%= link_to admin_root_path, class: "nav-link #{'active' if controller_name == 'dashboard'}" do %>
                <i class="bi bi-speedometer2 me-1"></i> Dashboard
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to admin_users_path, class: "nav-link #{'active' if controller_name == 'users'}" do %>
                <i class="bi bi-people me-1"></i> Users
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to admin_exercises_path, class: "nav-link #{'active' if controller_name == 'exercises'}" do %>
                <i class="bi bi-list-check me-1"></i> Exercises
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to admin_audit_logs_path, class: "nav-link #{'active' if controller_name == 'audit_logs'}" do %>
                <i class="bi bi-journal-text me-1"></i> Audit Log
              <% end %>
            </li>
          </ul>

          <ul class="navbar-nav">
            <li class="nav-item">
              <%= link_to root_path, class: "nav-link" do %>
                <i class="bi bi-box-arrow-left me-1"></i> Back to App
              <% end %>
            </li>
            <li class="nav-item">
              <span class="nav-link text-muted">
                <i class="bi bi-person-circle me-1"></i>
                <%= Current.user.name %>
              </span>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Flash Messages -->
    <% if flash[:notice] %>
      <div class="container-fluid mt-3 px-4">
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <%= flash[:notice] %>
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
      </div>
    <% end %>

    <% if flash[:alert] %>
      <div class="container-fluid mt-3 px-4">
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <%= flash[:alert] %>
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
      </div>
    <% end %>

    <!-- Main Content -->
    <main class="container-fluid py-4 px-4">
      <%= yield %>
    </main>
  </body>
</html>
