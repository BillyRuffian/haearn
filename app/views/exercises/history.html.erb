<% content_for(:title) { "#{@exercise.name} History | Haearn" } %>

<div class="container py-4">
  <!-- Header -->
  <div class="d-flex justify-content-between align-items-start mb-4">
    <div>
      <%= link_to exercises_path, class: "text-muted text-decoration-none small" do %>
        <i class="bi bi-arrow-left me-1"></i>Back to Exercises
      <% end %>
      <h1 class="display-heading mb-1 mt-2">
        <i class="bi bi-graph-up-arrow me-2"></i><%= @exercise.name %>
      </h1>
      <p class="text-muted mb-0">
        <span class="badge bg-secondary me-2"><%= @exercise.exercise_type.capitalize %></span>
        <% if @exercise.has_weight? %>
          <span class="badge bg-info">Weighted</span>
        <% end %>
        <% if @exercise.description.present? %>
          <span class="ms-2"><%= @exercise.description %></span>
        <% end %>
      </p>
      <% if @exercise.has_cues? %>
        <div class="form-cues small px-2 py-1 rounded" style="background: rgba(255, 107, 53, 0.08); border-left: 3px solid var(--bs-warning);">
          <i class="bi bi-lightbulb text-warning me-1"></i>
          <strong class="text-muted">Cues:</strong>
          <% @exercise.cues_list.each_with_index do |cue, i| %>
            <span class="text-muted"><%= cue %></span><%= '  ·  ' unless i == @exercise.cues_list.length - 1 %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <% if @selected_machine %>
    <div class="alert alert-info mb-4 d-flex justify-content-between align-items-center">
      <div>
        <i class="bi bi-funnel me-2"></i>
        <strong>Filtered by machine:</strong> <%= @selected_machine.name %>
      </div>
      <%= link_to history_exercise_path(@exercise), class: "btn btn-sm btn-outline-primary" do %>
        <i class="bi bi-x-circle me-1"></i>Show All
      <% end %>
    </div>
  <% end %>

  <% if @workout_exercises.any? %>
    <% unique_workout_count = @workout_exercises.map { |we| we.workout_block.workout_id }.uniq.count %>
    
    <!-- Progression Suggestion -->
    <% if @exercise.has_weight? && Current.user.active_workout %>
      <% # Get most recent workout exercise to analyze %>
      <% most_recent_we = @workout_exercises.first %>
      <% suggester = ProgressionSuggester.new(workout_exercise: most_recent_we, user: Current.user) %>
      <% if (suggestion = suggester.suggest) %>
        <div class="alert alert-success mb-4" role="alert">
          <div class="d-flex align-items-start">
            <i class="bi bi-arrow-up-circle-fill fs-3 me-3 text-success"></i>
            <div class="flex-grow-1">
              <h5 class="alert-heading mb-2">
                <i class="bi bi-lightbulb-fill me-1"></i>Ready to Progress!
              </h5>
              <p class="mb-2">
                Based on your last <%= suggestion[:sessions_analyzed] %> workouts, you're ready to increase weight:
              </p>
              <div class="progression-details mb-2">
                <span class="badge bg-dark me-2">
                  Current: <%= Current.user.format_weight(suggestion[:current_weight_kg]) %><%= Current.user.preferred_unit %>
                </span>
                <i class="bi bi-arrow-right mx-2"></i>
                <span class="badge bg-success me-2">
                  Try: <%= Current.user.format_weight(suggestion[:suggested_weight_kg]) %><%= Current.user.preferred_unit %>
                </span>
                <span class="text-muted small">(+<%= Current.user.format_weight(suggestion[:increase_kg]) %><%= Current.user.preferred_unit %>)</span>
              </div>
              <p class="mb-0 small text-muted">
                <strong>Why:</strong> <%= suggestion[:reasons].join(', ').capitalize %>
                <% if suggestion[:avg_rpe] %>
                  (avg RPE: <%= suggestion[:avg_rpe].round(1) %>)
                <% elsif suggestion[:avg_rir] %>
                  (avg RIR: <%= suggestion[:avg_rir].round %>)
                <% end %>
              </p>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
    
    <!-- Personal Records - Only show if there are 2+ workout sessions to compare -->
    <% if @exercise.has_weight? && @prs[:best_set_weight] && unique_workout_count >= 2 %>
      <div class="card mb-4 pr-card">
        <div class="card-header">
          <i class="bi bi-trophy-fill text-warning me-2"></i>Personal Records
        </div>
        <div class="card-body">
          <div class="row g-3">
            <% if @prs[:best_set_weight] %>
              <div class="col-md-4">
                <div class="pr-stat">
                  <div class="pr-label">Heaviest Set</div>
                  <div class="pr-value weight-display">
                    <%= number_with_delimiter(Current.user.format_weight(@prs[:best_set_weight][:weight_kg])) %>
                    <small class="text-muted"><%= Current.user.preferred_unit %></small>
                  </div>
                  <div class="pr-detail">
                    × <%= @prs[:best_set_weight][:reps] %> reps
                    <span class="text-muted ms-2"><%= @prs[:best_set_weight][:date].strftime("%b %d, %Y") %></span>
                  </div>
                </div>
              </div>
            <% end %>

            <% if @raw_prs[:best_set_weight] %>
              <div class="col-md-4">
                <div class="pr-stat">
                  <div class="pr-label">Heaviest Raw Set</div>
                  <div class="pr-value weight-display">
                    <%= number_with_delimiter(Current.user.format_weight(@raw_prs[:best_set_weight][:weight_kg])) %>
                    <small class="text-muted"><%= Current.user.preferred_unit %></small>
                  </div>
                  <div class="pr-detail">
                    × <%= @raw_prs[:best_set_weight][:reps] %> reps
                    <span class="text-muted ms-2"><%= @raw_prs[:best_set_weight][:date].strftime("%b %d, %Y") %></span>
                  </div>
                </div>
              </div>
            <% end %>

            <% if @equipped_prs[:best_set_weight] %>
              <div class="col-md-4">
                <div class="pr-stat">
                  <div class="pr-label">Heaviest Equipped Set</div>
                  <div class="pr-value weight-display">
                    <%= number_with_delimiter(Current.user.format_weight(@equipped_prs[:best_set_weight][:weight_kg])) %>
                    <small class="text-muted"><%= Current.user.preferred_unit %></small>
                  </div>
                  <div class="pr-detail">
                    × <%= @equipped_prs[:best_set_weight][:reps] %> reps
                    <span class="text-muted ms-2"><%= @equipped_prs[:best_set_weight][:date].strftime("%b %d, %Y") %></span>
                  </div>
                </div>
              </div>
            <% end %>

            <% if @prs[:best_set_volume] %>
              <div class="col-md-4">
                <div class="pr-stat">
                  <div class="pr-label">Best Single Set</div>
                  <div class="pr-value weight-display">
                    <%= number_with_delimiter(Current.user.format_weight(@prs[:best_set_volume][:volume])) %>
                    <small class="text-muted"><%= Current.user.preferred_unit %></small>
                  </div>
                  <div class="pr-detail">
                    <%= number_with_delimiter(Current.user.format_weight(@prs[:best_set_volume][:weight_kg])) %> × <%= @prs[:best_set_volume][:reps] %>
                    <span class="text-muted ms-2"><%= @prs[:best_set_volume][:date].strftime("%b %d, %Y") %></span>
                  </div>
                </div>
              </div>
            <% end %>

            <% if @prs[:best_session_volume] %>
              <div class="col-md-4">
                <div class="pr-stat">
                  <div class="pr-label">Best Session Volume</div>
                  <div class="pr-value weight-display">
                    <%= number_with_delimiter(Current.user.format_weight(@prs[:best_session_volume][:volume])) %>
                    <small class="text-muted"><%= Current.user.preferred_unit %></small>
                  </div>
                  <div class="pr-detail">
                    <span class="text-muted"><%= @prs[:best_session_volume][:date].strftime("%b %d, %Y") %></span>
                  </div>
                </div>
              </div>
            <% end %>

            <% if @prs[:best_e1rm] %>
              <div class="col-md-4">
                <div class="pr-stat">
                  <div class="pr-label">Best Est. 1RM</div>
                  <div class="pr-value weight-display">
                    <%= number_with_delimiter(Current.user.format_weight(@prs[:best_e1rm][:e1rm_kg])) %>
                    <small class="text-muted"><%= Current.user.preferred_unit %></small>
                  </div>
                  <div class="pr-detail">
                    from <%= number_with_delimiter(Current.user.format_weight(@prs[:best_e1rm][:weight_kg])) %> × <%= @prs[:best_e1rm][:reps] %>
                    <span class="text-muted ms-2"><%= @prs[:best_e1rm][:date].strftime("%b %d, %Y") %></span>
                  </div>
                </div>
              </div>
            <% end %>

            <% if @relative_strength %>
              <div class="col-md-4">
                <div class="pr-stat">
                  <div class="pr-label">Bodyweight Relative</div>
                  <div class="pr-value text-forge">
                    <%= @relative_strength[:ratio] %>x
                  </div>
                  <div class="pr-detail">
                    <%= number_with_delimiter(Current.user.format_weight(@relative_strength[:max_weight_kg])) %> <%= Current.user.preferred_unit %> @ <%= number_with_delimiter(Current.user.format_weight(@relative_strength[:bodyweight_kg])) %> <%= Current.user.preferred_unit %> BW
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Progress Charts -->
    <% if @exercise.has_weight? && @chart_data[:labels]&.length.to_i > 1 %>
      <div class="row g-3 mb-4">
        <div class="col-md-6">
          <div class="card">
            <div class="card-header">
              <i class="bi bi-graph-up me-2"></i>Weight Progression
            </div>
            <div class="card-body">
              <div style="height: 200px;"
                   data-controller="chart"
                   data-chart-type-value="line"
                   data-chart-data-value='<%= @chart_data[:weight].to_json %>'>
                <canvas data-chart-target="canvas"></canvas>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="card">
            <div class="card-header">
              <i class="bi bi-bar-chart me-2"></i>Session Volume
            </div>
            <div class="card-body">
              <div style="height: 200px;"
                   data-controller="chart"
                   data-chart-type-value="line"
                   data-chart-data-value='<%= @chart_data[:volume].to_json %>'>
                <canvas data-chart-target="canvas"></canvas>
              </div>
            </div>
          </div>
        </div>
      </div>

      <% if @chart_data[:e1rm]&.length.to_i > 1 %>
        <div class="row g-3 mb-4">
          <div class="col-12">
            <div class="card">
              <div class="card-header">
                <i class="bi bi-graph-up-arrow me-2"></i>Estimated 1RM Trend
                <small class="text-muted ms-2">(Epley formula)</small>
              </div>
              <div class="card-body">
                <div style="height: 200px;"
                     data-controller="e1rm-chart"
                     data-e1rm-chart-data-value='<%= @chart_data[:e1rm].to_json %>'>
                  <canvas data-e1rm-chart-target="canvas"></canvas>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>

    <!-- Stats Overview -->
    <div class="row g-3 mb-4">
      <div class="col-4">
        <div class="card text-center">
          <div class="card-body py-3">
            <div class="h4 mb-0"><%= @workout_exercises.count %></div>
            <small class="text-muted">Sessions</small>
          </div>
        </div>
      </div>
      <div class="col-4">
        <div class="card text-center">
          <div class="card-body py-3">
            <div class="h4 mb-0"><%= @workout_exercises.sum { |we| we.exercise_sets.reject(&:is_warmup).count } %></div>
            <small class="text-muted">Work Sets</small>
          </div>
        </div>
      </div>
      <div class="col-4">
        <div class="card text-center">
          <div class="card-body py-3">
            <div class="weight-display h4 mb-0">
              <%= number_with_delimiter(Current.user.format_weight(
                @workout_exercises.sum { |we| we.exercise_sets.reject(&:is_warmup).sum { |s| (s.weight_kg || 0) * (s.reps || 0) } }
              )) %>
            </div>
            <small class="text-muted">Total Volume</small>
          </div>
        </div>
      </div>
    </div>

    <!-- Group by Equipment if multiple equipment used -->
    <% if @by_machine.keys.compact.any? %>
      <ul class="nav nav-tabs mb-3" role="tablist">
        <li class="nav-item" role="presentation">
          <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#all-machines" type="button">
            All (<%= @workout_exercises.count %>)
          </button>
        </li>
        <% @by_machine.keys.compact.each_with_index do |machine, idx| %>
          <li class="nav-item" role="presentation">
            <button class="nav-link" data-bs-toggle="tab" data-bs-target="#machine-<%= machine.id %>" type="button">
              <%= machine.name %> (<%= @by_machine[machine].count %>)
            </button>
          </li>
        <% end %>
        <% if @by_machine[nil]&.any? %>
          <li class="nav-item" role="presentation">
            <button class="nav-link" data-bs-toggle="tab" data-bs-target="#no-machine" type="button">
              No Equipment (<%= @by_machine[nil].count %>)
            </button>
          </li>
        <% end %>
      </ul>

      <div class="tab-content">
        <div class="tab-pane fade show active" id="all-machines" role="tabpanel">
          <%= render partial: "history_sessions", locals: { workout_exercises: @workout_exercises, prs: @prs, show_prs: unique_workout_count >= 2 } %>
        </div>
        <% @by_machine.keys.compact.each do |machine| %>
          <% machine_workout_count = @by_machine[machine].map { |we| we.workout_block.workout_id }.uniq.count %>
          <div class="tab-pane fade" id="machine-<%= machine.id %>" role="tabpanel">
            <%= render partial: "history_sessions", locals: { workout_exercises: @by_machine[machine], prs: @prs_by_machine[machine], show_prs: machine_workout_count >= 2 } %>
          </div>
        <% end %>
        <% if @by_machine[nil]&.any? %>
          <% no_machine_workout_count = @by_machine[nil].map { |we| we.workout_block.workout_id }.uniq.count %>
          <div class="tab-pane fade" id="no-machine" role="tabpanel">
            <%= render partial: "history_sessions", locals: { workout_exercises: @by_machine[nil], prs: @prs_by_machine[nil], show_prs: no_machine_workout_count >= 2 } %>
          </div>
        <% end %>
      </div>
    <% else %>
      <%= render partial: "history_sessions", locals: { workout_exercises: @workout_exercises, prs: @prs, show_prs: unique_workout_count >= 2 } %>
    <% end %>

  <% else %>
    <div class="text-center py-5">
      <i class="bi bi-inbox display-4 text-muted"></i>
      <p class="text-muted mt-3">You haven't logged this exercise yet.</p>
      <% if Current.user.active_workout %>
        <%= link_to add_exercise_workout_path(Current.user.active_workout, select_exercise: @exercise.id), class: "btn btn-primary" do %>
          <i class="bi bi-plus-lg me-1"></i>Add to Current Workout
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>
