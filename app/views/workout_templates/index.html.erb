<div class="container py-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="display-6 mb-0">
      <i class="bi bi-journal-bookmark me-2"></i>Workout Templates
    </h1>
    <%= link_to new_workout_template_path, class: "btn btn-primary" do %>
      <i class="bi bi-plus-lg me-1"></i>Create Template
    <% end %>
  </div>

  <% if @templates.any? %>
    <div class="row g-3">
      <% @templates.each do |template| %>
        <div class="col-12 col-md-6 col-lg-4">
          <div class="card h-100">
            <div class="card-body">
              <h5 class="card-title">
                <%= link_to template.name, template, class: "text-decoration-none" %>
              </h5>
              <% if template.description.present? %>
                <p class="card-text text-muted small"><%= truncate(template.description, length: 100) %></p>
              <% end %>
              
              <div class="mt-3">
                <% exercise_count = template.template_exercises.count %>
                <% block_count = template.template_blocks.count %>
                <small class="text-muted">
                  <i class="bi bi-list-task me-1"></i><%= pluralize(exercise_count, 'exercise') %>
                  <% if block_count > exercise_count %>
                    Â· <%= pluralize(block_count - exercise_count, 'superset') %>
                  <% end %>
                </small>
              </div>

              <div class="mt-3 d-flex gap-2">
                <%= button_to start_workout_workout_template_path(template), 
                    class: "btn btn-sm btn-primary flex-grow-1",
                    data: { turbo_frame: "_top" } do %>
                  <i class="bi bi-play-fill me-1"></i>Start Workout
                <% end %>
                
                <%= link_to template, class: "btn btn-sm btn-outline-secondary" do %>
                  <i class="bi bi-eye"></i>
                <% end %>
              </div>
            </div>
            
            <div class="card-footer text-muted small">
              Updated <%= time_ago_in_words(template.updated_at) %> ago
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-5">
      <i class="bi bi-journal-bookmark display-1 text-muted mb-3"></i>
      <h4 class="text-muted">No templates yet</h4>
      <p class="text-muted mb-4">Create reusable workout templates to save time</p>
      <%= link_to new_workout_template_path, class: "btn btn-primary" do %>
        <i class="bi bi-plus-lg me-1"></i>Create Your First Template
      <% end %>
    </div>
  <% end %>
</div>
