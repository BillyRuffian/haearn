<% content_for(:title) { "New Template | Haearn" } %>

<div class="container py-4">
  <div class="mb-4">
    <h1 class="display-heading">
      <i class="bi bi-plus-circle me-2"></i>New Template
    </h1>
    <p class="text-muted">Create a template manually (or save from a completed workout)</p>
  </div>

  <%= form_with model: @template, local: true do |f| %>
    <% if @template.errors.any? %>
      <div class="alert alert-danger">
        <h5>Please fix the following errors:</h5>
        <ul class="mb-0">
          <% @template.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="card mb-3">
      <div class="card-body">
        <div class="mb-3">
          <%= f.label :name, class: "form-label" %>
          <%= f.text_field :name, class: "form-control", placeholder: "e.g., Upper Body Push Day", autofocus: true %>
        </div>

        <div class="mb-3">
          <%= f.label :description, "Description (optional)", class: "form-label" %>
          <%= f.text_area :description, class: "form-control", rows: 3, placeholder: "Notes about this template..." %>
        </div>
      </div>
    </div>

    <div class="alert alert-info">
      <i class="bi bi-info-circle me-2"></i>
      <strong>Tip:</strong> The easiest way to create templates is to complete a workout first, then use the 
      "Save as Template" button. This automatically captures exercises, sets, and target weights.
    </div>

    <div class="d-flex gap-2">
      <%= f.submit "Create Template", class: "btn btn-primary" %>
      <%= link_to "Cancel", workout_templates_path, class: "btn btn-outline-secondary" %>
    </div>
  <% end %>
</div>
